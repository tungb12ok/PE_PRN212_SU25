<Window x:Class="JLPTMockTestManagement__SE180090.JLPTMockTestManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JLPTMockTestManagement__SE180090"
        Title="JLPT Mock Test Management - SU 2025"
        Height="500" Width="800"
        FontFamily="Arial" FontSize="12"
        Background="#FFBAE6FD"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Search -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Form & Buttons -->
        </Grid.RowDefinitions>

        <!-- Search -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Search:" VerticalAlignment="Center" Foreground="#FF1E3A8A" FontSize="14"/>
            <TextBox x:Name="txtSearch" Width="200" Height="24" Margin="5,0,0,0"
                     Background="#FFF0F9FF"/>
            <Button Content="Search" Click="BtnSearch_Click"
                    Background="#FF06B6D4" Foreground="White" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="dgMockTests" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Test ID" Binding="{Binding TestId}" Width="*"/>
                <DataGridTextColumn Header="Title" Binding="{Binding TestTitle}" Width="*"/>
                <DataGridTextColumn Header="Skill Area" Binding="{Binding SkillArea}" Width="*"/>
                <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime}" Width="*"/>
                <DataGridTextColumn Header="End Time" Binding="{Binding EndTime}" Width="*"/>
                <DataGridTextColumn Header="Candidate" Binding="{Binding Candidate.FullName}" Width="*"/>
                <DataGridTextColumn Header="Score" Binding="{Binding Score}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Form Inputs + Buttons -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,10,0,0">
            <WrapPanel Margin="0,0,0,5">
                <Label Content="Test Title:" Width="80"/>
                <TextBox x:Name="txtTitle" Width="200" Background="#FFF0F9FF"/>
                <Label Content="Skill Area:" Width="80" Margin="20,0,0,0"/>
                <TextBox x:Name="txtSkill" Width="200" Background="#FFF0F9FF"/>
            </WrapPanel>

            <WrapPanel Margin="0,0,0,5">
                <Label Content="Start Time:" Width="80"/>
                <DatePicker x:Name="dpStartTime" Width="200" Background="#FFF0F9FF"/>
                <Label Content="End Time:" Width="80" Margin="20,0,0,0"/>
                <DatePicker x:Name="dpEndTime" Width="200" Background="#FFF0F9FF"/>
            </WrapPanel>

            <WrapPanel Margin="0,0,0,5">
                <Label Content="Candidate:" Width="80"/>
                <ComboBox x:Name="cbCandidates" Width="200" Background="#FFF0F9FF" DisplayMemberPath="FullName" SelectedValuePath="CandidateId"/>
                <Label Content="Score:" Width="80" Margin="20,0,0,0"/>
                <TextBox x:Name="txtScore" Width="200" Background="#FFF0F9FF" InputScope="Number"/>
            </WrapPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Add" Width="80" Margin="5" Click="BtnAdd_Click"
                        Background="#FF06B6D4" Foreground="White"/>
                <Button Content="Update" Width="80" Margin="5" Click="BtnUpdate_Click"
                        Background="#FF06B6D4" Foreground="White"/>
                <Button Content="Delete" Width="80" Margin="5" Click="BtnDelete_Click"
                        Background="#FF06B6D4" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

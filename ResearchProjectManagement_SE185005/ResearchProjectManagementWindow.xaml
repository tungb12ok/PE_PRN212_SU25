<Window x:Class="ResearchProjectManagement_SE185005.ResearchProjectManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Research Project Management - SU 2025"
        Height="500" Width="800"
        FontFamily="Tahoma" FontSize="13"
        Background="#FFF5F5DC"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Nhập thông tin -->
            <RowDefinition Height="Auto"/>
            <!-- Tìm kiếm + nút -->
            <RowDefinition Height="*"/>
            <!-- Danh sách -->
        </Grid.RowDefinitions>

        <!-- Nhập thông tin dự án -->
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Project ID:" FontFamily="Arial" FontSize="12" Foreground="#FF6B705C" Width="120"/>
                <TextBox x:Name="txtProjectId" Width="200" Height="21" Background="#FFFFF8EB" IsReadOnly="True"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Title:" FontFamily="Arial" FontSize="12" Foreground="#FF6B705C" Width="120"/>
                <TextBox x:Name="txtTitle" Width="300" Height="18" Background="#FFFFF8EB"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Field:" FontFamily="Arial" FontSize="12" Foreground="#FF6B705C" Width="120"/>
                <TextBox x:Name="txtField" Width="300" Height="18" Background="#FFFFF8EB"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Budget:" FontFamily="Arial" FontSize="12" Foreground="#FF6B705C" Width="120"/>
                <TextBox x:Name="txtBudget" Width="200" Height="19" Background="#FFFFF8EB"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Start Date:" FontFamily="Arial" FontSize="12" Foreground="#FF6B705C" Width="120"/>
                <DatePicker x:Name="dpStartDate" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="End Date:" FontFamily="Arial" FontSize="12" Foreground="#FF6B705C" Width="120"/>
                <DatePicker x:Name="dpEndDate" Width="200"/>
            </StackPanel>


            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                <Label Content="Lead Researcher:" FontFamily="Arial" FontSize="12" Foreground="#FF6B705C" Width="120"/>
                <ComboBox x:Name="cbLeadResearcher" Width="250" Height="20" SelectionChanged="dgProjects_SelectionChanged"/>
            </StackPanel>
        </StackPanel>

        <!-- Tìm kiếm + các nút chức năng -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Left">
            <!-- Tìm kiếm -->
            <TextBox x:Name="txtSearch" Width="200" Height="20" Background="#FFFFF8EB" Margin="0,0,10,0"/>
            <Button x:Name="btnSearch" Content="Search" Padding="5" Background="#FFB38B82" Foreground="White"
                    Click="BtnSearch_Click" Margin="0,0,20,0"/>

            <!-- Các nút -->
            <Button x:Name="btnCreate" Content="Create" Click="BtnCreate_Click"
                    Width="80" Padding="5" Background="#FFB38B82" Foreground="White" Margin="0,0,10,0"/>
            <Button x:Name="btnUpdate" Content="Update" Click="BtnUpdate_Click"
                    Width="80" Padding="5" Background="#FFB38B82" Foreground="White" Margin="0,0,10,0"/>
            <Button x:Name="btnDelete" Content="Delete" Click="BtnDelete_Click"
                    Width="80" Padding="5" Background="#FFB38B82" Foreground="White"/>
        </StackPanel>

        <!-- Danh sách dự án -->
        <DataGrid x:Name="dgProjects"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="dgProjects_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="50" Binding="{Binding ProjectId}"/>
                <DataGridTextColumn Header="Title" Width="150" Binding="{Binding ProjectTitle}"/>
                <DataGridTextColumn Header="Field" Width="120" Binding="{Binding ResearchField}"/>
                <DataGridTextColumn Header="Budget" Width="100" Binding="{Binding Budget}"/>
                <DataGridTextColumn Header="Start Date" Width="100" Binding="{Binding StartDate, StringFormat='{}{0:MM/dd/yyyy}'}"/> 
                <DataGridTextColumn Header="End Date" Width="100" Binding="{Binding EndDate, StringFormat='{}{0:MM/dd/yyyy}'}"/> 
                <DataGridTextColumn Header="Lead Researcher" Width="150" Binding="{Binding LeadResearcher.FullName}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
